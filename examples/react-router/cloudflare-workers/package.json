    "@playwright/test": "^1.48.2",
    "@react-router/dev": "^7.0.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "playwright": "^1.47.0",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "^3.86.0"
